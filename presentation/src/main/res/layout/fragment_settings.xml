<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/padding_large"
        android:layout_marginBottom="5dp"
        android:background="@color/light_brown"
        android:text="@string/textview_logout"/>

    <TextView android:id="@+id/tv_delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_logout"
        android:padding="@dimen/padding_large"
        android:layout_marginBottom="5dp"
        android:background="@color/light_brown"
        android:text="@string/textview_delete_account"/>

    <TextView android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_delete_account"
        android:padding="@dimen/padding_large"
        android:layout_marginBottom="5dp"
        android:background="@color/light_brown"
        android:text="@string/title_activity_privacy"/>

    <TextView android:id="@+id/tv_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_privacy"
        android:padding="@dimen/padding_large"
        android:layout_marginBottom="5dp"
        android:background="@color/light_brown"
        android:text="@string/title_activity_terms"/>


</RelativeLayout>
